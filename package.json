{
  "name": "electron-next-boilerplate",
  "version": "1.0.0",
  "description": "Electron + Next.js boilerplate",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install:all": "npm i && cd next/ && npm i && cd ..",
    "dev:electron": "NODE_ENV=development electron .",
    "dev:next": "cd next/ && npm run dev",
    "dev": "run-p dev:electron dev:next",
    "build:windows": "build --windows",
    "build:mac": "build --macos",
    "build:linux": "build --linux"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4lg4/electron-next-boilerplate.git"
  },
